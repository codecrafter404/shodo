<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!-- these registry entries should be installed
         to the target user's machine -->
    <DirectoryRef Id="TARGETDIR">
      <!-- groups together the registry entries to be installed -->
      <!-- Note the unique `Id` we provide here -->
      <Component Id="OpenHereKeys" Guid="*">
        <!-- the registry key will be under
             HKEY_CURRENT_USER\Software\MyCompany\MyApplicationName -->
        <!-- Tauri uses the second portion of the
             bundle identifier as the `MyCompany` name
             (e.g. `tauri-apps` in `com.tauri-apps.test`)  -->
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="directory\background\shell\Shodo-Notes (reading mode)"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue
            Type="string"
            Name="Icon"
            Value="C:\Program Files\shodo\shodo.exe"
            KeyPath="yes"
          />
          <RegistryValue Type="string" Value="Default Value"
            value="Open Shodo-Notes here (reading mode)" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="directory\background\shell\Shodo-Notes (reading mode)\command"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue Type="string" Value="Default Value"
            value="&quot;C:\Program Files\shodo\shodo.exe&quot; &quot;%V&quot; -n" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="directory\background\shell\Shodo-Notes"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue
            Type="string"
            Name="Icon"
            Value="C:\Program Files\shodo\shodo.exe"
            KeyPath="yes"
          />
          <RegistryValue Type="string" Value="Default Value"
            value="Open Shodo-Notes here" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="directory\background\shell\Shodo-Notes\command"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue Type="string" Value="Default Value"
            value="&quot;C:\Program Files\shodo\shodo.exe&quot; &quot;%V&quot;" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="Directory\background\shell\Shodo-Notes (reading mode)"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue
            Type="string"
            Name="Icon"
            Value="C:\Program Files\shodo\shodo.exe"
            KeyPath="yes"
          />
          <RegistryValue Type="string" Value="Default Value"
            value="Open Shodo-Notes here (reading mode)" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="Directory\background\shell\Shodo-Notes (reading mode)\command"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue Type="string" Value="Default Value"
            value="&quot;C:\Program Files\shodo\shodo.exe&quot; &quot;%V&quot; -n" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="Directory\background\shell\Shodo-Notes"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue
            Type="string"
            Name="Icon"
            Value="C:\Program Files\shodo\shodo.exe"
            KeyPath="yes"
          />
          <RegistryValue Type="string" Value="Default Value"
            value="Open Shodo-Notes here" />
        </RegistryKey>
        <RegistryKey
          Root="HKEY_CLASSES_ROOT"
          Key="Directory\background\shell\Shodo-Notes\command"
          Action="createAndRemoveOnUninstall"
        >
          <!-- values to persist on the registry -->
          <RegistryValue Type="string" Value="Default Value"
            value="&quot;C:\Program Files\shodo\shodo.exe&quot; &quot;%V&quot;" />
        </RegistryKey>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>